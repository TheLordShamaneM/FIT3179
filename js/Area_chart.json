{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Arrivals by Gender(2020-2023)",
    "width": 400,
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/TheLordShamane/FIT3179/refs/heads/main/Assignment%202/Data/arrivals.csv",
      "format": {
        "type": "csv"
      }
    },
    "transform": [
    {
      "calculate": "year(datum.date)",
      "as": "year"
    },
    {
      "calculate": "datum.arrivals / 1000", 
      "as": "arrivals"
    },
    {
      "calculate": "datum.arrivals_male / 1000",  
      "as": "arrivals_male"
    },
    {
      "calculate": "datum.arrivals_female / 1000",  
      "as": "arrivals_female"
    }
    ],
    "layer": [
      {
        "mark": {
          "type": "area",
          "color": "lightlue"
        },
        "encoding": {
          "x": { 
            "field": "date", 
            "type": "temporal",
            "title": "Date"
          },
          "y": { 
            "field": "arrivals", 
            "type": "quantitative",
            "title": "Arrivals (000)",
            "axis": {
            "format": ".0f"
          }
          },
          "tooltip": [
            { "field": "date", "type": "temporal", "title": "Date" },
            { "field": "arrivals", "type": "quantitative", "title": "Total Arrivals (000)", "format": ".2f"}
          ],
          "color": {
            "value": "lightblue"
          }
        }
      },
      {
        "mark": {
          "type": "area",
          "opacity": 0.6,
          "color": "blue"
        },
        "encoding": {
          "x": { 
            "field": "date", 
            "type": "temporal" 
          },
          "y": { 
            "field": "arrivals_male", 
            "type": "quantitative",
            "title": "Arrivals (000)",
            "axis": {
            "format": ".0f"
          }
          },
          "tooltip": [
            { "field": "date", "type": "temporal", "title": "Date" },
            { "field": "arrivals_male", "type": "quantitative", "title": "Male Arrivals (000)", "format":".2f"}
          ],
          "color": {
            "value": "blue"
          }
        }
      },
      {
        "mark": {
          "type": "area",
          "opacity": 0.6,
          "color": "pink"
        },
        "encoding": {
          "x": { 
            "field": "date", 
            "type": "temporal",
            "axis":{
              "labels": false
            }
          },
          "y": { 
            "field": "arrivals_female", 
            "type": "quantitative",
            "axis": {
            "format": ".0f"
          } 
          },
          "tooltip": [
            { "field": "date", "type": "temporal", "title": "Date" },
            { "field": "arrivals_female", "type": "quantitative", "title": "Female Arrivals (000)","format": ".2f"}
          ],
          "color": {
            "value": "pink"
          }
        }
      }
    ],
    "config": {
      "view": {
        "stroke": "transparent"
      }
    }
  }
  